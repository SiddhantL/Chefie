<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.siddhantlad.chefiecompile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="ChefieImage"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".Welcome" />
        <activity android:name=".DatabaseSource.ArtistActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".DatabaseSource.SelectedItems"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".DatabaseSource.AddRecipeActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".DatabaseSource.RecipeActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".DatabaseSource.MainActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".DatabaseSource.MainActivity2"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AddRecipeFab"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".DatabaseSource.ImageUploader"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".DisplayRecipeInfo"
            android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>