<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE3EA"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".DatabaseSource.MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAddArtist"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Add Ingredients To the Recipe"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:text="Tap on an Ingredient to select"
        android:textAlignment="center"
        android:textColor="#444444" />

    <Button
        android:id="@+id/recipeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-79dp"
        android:background="@drawable/circular_button"
        android:backgroundTint="#38444f"
        android:text="Continue"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recipeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="97dp"
        android:background="#ffffff"
        android:hint="Selected Ingredients"
        android:textColor="#000000"
        android:textSize="24sp" />

    <SearchView
        android:id="@+id/searchQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView1" />

    <ListView
        android:id="@+id/listViewArtists"
        android:layout_width="match_parent"
        android:layout_height="353dp"
        android:layout_above="@+id/textView17"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/searchQuery"
        android:layout_marginBottom="-2dp"
        android:divider="#DFE3EA"
        android:dividerHeight="8dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="CAN'T FIND INGREDIENT?"
        android:textAlignment="center"
        android:textColor="#8b0000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchQuery"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circular_button"
        android:backgroundTint="#38444f"
        android:text="Button"
        android:textColor="#ffffff"
        android:visibility="gone" />
</RelativeLayout>