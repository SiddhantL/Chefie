<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpinnerSplash">

    <ImageView
        android:id="@+id/imgvw"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/chefieicon"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <!--<ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="212dp"
        android:layout_height="212dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/circular_progress_bar" />-->

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView20"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="Powered By"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgvw"
        android:layout_centerHorizontal="true"
        android:text="SNL Tech"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <com.eyalbira.loadingdots.LoadingDots xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        app:LoadingDots_auto_play="true"
        app:LoadingDots_dots_color="@android:color/holo_green_light"

        app:LoadingDots_dots_count="4"
        app:LoadingDots_dots_size="10dp"

        app:LoadingDots_dots_space="1dp"
        app:LoadingDots_jump_duration="400"
        app:LoadingDots_jump_height="8dp"
        app:LoadingDots_loop_duration="800"
        app:LoadingDots_loop_start_delay="100" />
</RelativeLayout>